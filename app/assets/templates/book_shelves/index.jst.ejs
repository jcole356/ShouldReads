<h3>Bookshelves</h3>

<ul>
  <% bookShelves.each(function(bookShelf) { %>
    <li class="shelf" data-id="<%= bookShelf.id %>">
      <h4 class="shelf-title"><%= bookShelf.escape('title') %></h4>
    </li>
      <a data-id="<%= bookShelf.id %>" class="btn btn-primary btn-xs shelf-delete">&times;</a>
  <% }) %>
</ul>

<form>
  <input class="form-control" type="text" name="book_shelf[title]" placeholder="My New Bookshelf">
  <br>
  <input type="submit" class="new-shelf btn btn-default" value="Add Shelf">
</form>
