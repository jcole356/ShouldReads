<div class="col-12"><h4>Bookshelves</h4></div>
<ul class="col-12">
  {{ bookShelves.each(function(bookShelf) { }}
    <li class="shelf col-10" data-id="{{= bookShelf.id }}">
      <span class="shelf-title">{{= bookShelf.escape('title') }}</span>
    </li>
    {{ if (bookShelf.escape('title') !== "All") { }}
      <a
        class="btn btn-danger btn-sm shelf-delete col-2"
        data-id="{{= bookShelf.id }}"
      >
        x
      </a>
    {{ } }}
  {{ }) }}
</ul>
<div class="form-group add-shelf col-12">
  <form>
    <input
      class="form-control"
      maxlength="20"
      name="book_shelf[title]"
      placeholder="Create Bookshelf"
      type="text"
    >
    <br>
    <input
      class="new-shelf btn btn-primary btn-sm"
      type="submit"
      value="Add Shelf"
    >
  </form>
</div>
<div class="shelf-validation" />
