<a class="col-12" href="#/books/{{= book.id }}">
  <div class="row">
    <div class="shelf-image col-6 order-1 col-md-2">
        <img
          alt="Book Cover"
          height="97"
          src="{{= book.escape('cover_image_url') }}"
          width="64"
        >
    </div>
    <div class="shelf-book-info shelf-book-title col-12 order-3 col-md-2">
      {{= book.escape('title') }}
    </div>
    <div class="shelf-book-info col-12 order-4 col-md-2">
      by {{= book.escape('author') }}
    </div>
    <div class="shelf-book-info col-12 order-5 col-md-2">
      {{= book.escape('number_of_pages') }} Pages
    </div>
    <div class="shelf-book-info col-12 order-6 col-md-2">
      Avg Rating:
      <br>
      {{= book.escape('average_rating') }} of 5
    </div>
    {{ if (title) { }}
      <div class="shelf-book-info col-12 order-7 col-md-2">{{= title }}</div>
    {{ } else { }}
      <div class="remove-book col-6 order-2 col-md-2 order-md-8" data-shelf="">
        <button
          class="btn btn-danger btn-sm shelving-delete"
          data-book-id="{{= book.id }}"
          data-shelving-id="{{= book.escape('shelving_id') }}"
        >
          &times;
        </button>
      </div>
    {{ } }}
  </div>
</a>
