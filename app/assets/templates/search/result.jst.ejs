<div class="index-book-info"
     data-title="<%= searchBook.escape('title') %>"
     data-author="<%= searchBook.escape('author') %>"
     data-image="<%= searchBook.escape('cover_image_url') %>"
     data-pages="<%= searchBook.escape('number_of_pages') %>"
     data-desc="<%= searchBook.escape('description') %>">
  <div class="index-image">
    <img src="<%= searchBook.escape('cover_image_url') %>"
         alt="Book Cover"
         height="195"
         width="128">
  </div>
  <h3 class="index-title"><%= searchBook.escape('title') %></h3>
  <h4 class="index-author"><%= searchBook.escape('author') %></h4>
</div>
