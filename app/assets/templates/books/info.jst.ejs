<div class="show-image">
  <img src="<%= book.escape('cover_image_url') %>"
       alt="Book Cover"
       height="195"
       width="128">
</div>
<div class="show-info">
  <h2 class ="show-title"><%= book.escape('title') %></h2>
  <h4 class ="show-author">by <%= book.escape('author') %></h4>
  <h4 class ="show-pages"><%= book.escape('number_of_pages') %> Pages</h4>
  <h4 class ="show-rating">Avg Rating: <%= book.escape('average_rating') %></h4>
</div>
<div class="shelf-choice">
  <select class="form-control" id="shelf_choice">
    <option></option>
    <% bookShelves.each(function(bookShelf) { %>
      <% if (bookShelf.escape('title') !== "All") { %>
        <option value="<%= bookShelf.id %>" data-title="<%= bookShelf.escape('title') %>"><%= bookShelf.escape('title') %></option>
      <% } %>
    <% }) %>
  </select>
  <button class="btn btn-default add-book" type="button" name="button">Add Book to Shelf!</button>
  <div class="confirmation"></div>
</div>
<div class="write-review">
  <% if (book.escape('already_reviewed?') === "false") { %>
    <button class="btn btn-default btn-xs add-review" type="button" name="button">Write Review</button>
  <% } %>
</div>

<div class="synopsis">
  <h3>Synopsis</h3>
  <p class="synopsis-text"><%= book.escape('synopsis') %></p>
</div>
