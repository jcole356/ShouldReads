<div class="m-content">
  <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <h3 class="m-review-title">Review <%= book.escape('title') %></h3>
  <form>
    <div class="form-group">
      <label for="review-rating">Rating
        <select id="review-rating" class="form-control" name="review[rating]">
          <option value="1"
            <% if (review.escape('rating') === "1") { %>
              selected
            <% } %>
          >1</option>
          <option value="2"
            <% if (review.escape('rating') === "2") { %>
              selected
            <% } %>
          >2</option>
          <option value="3"
            <% if (review.escape('rating') === "3") { %>
              selected
            <% } %>
          >3</option>
          <option value="4"
            <% if (review.escape('rating') === "4") { %>
              selected
            <% } %>
          >4</option>
          <option value="5"
            <% if (review.escape('rating') === "5") { %>
              selected
            <% } %>
          >5</option>
        </select>
      </label>
    </div>

    <label for="review-title">Title</label>
    <div class="form-group">
      <input class="form-control"
             id="review-title"
             type="text"
             name="review[title]"
             value="<%= review.escape('title') %>">
    </div>

    <label for="review-body">Review</label>
    <div class="form-group">
      <textarea class="form-control"
                id="review-body"
                name="review[body]"
                rows="8"
                cols="40"><%= review.escape('body') %></textarea>
    </div>

    <button type="submit" class="btn btn-submit submit-review">Add Review</button>
  </form>
</div>
