<div class="m-content well">
  <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <form class="form-horizontal">
    <legend class="form-group">Review <%= book.escape('title') %></legend>
    <div class="form-group">
        <label for="review-rating">Rating</label>
          <input id="review-rating"
                 type="number"
                 class="rating"
                 name="review[rating]"
                 value="<%= parseInt(review.escape('rating')) %>"
                 min=0
                 max=5
                 step=1.0
                 data-size="sm" >
    </div>

    <div class="form-group">
        <label for="review-title">Title</label>
          <input class="form-control"
                 id="review-title"
                 type="text"
                 name="review[title]"
                 value="<%= review.escape('title') %>">
    </div>
    <div class="form-group">
          <label for="review-body">Review</label>
          <textarea class="form-control"
                    id="review-body"
                    name="review[body]"
                    rows="8"
                    cols="40"><%= review.escape('body') %></textarea>
    </div>
    <button type="submit" class="btn btn-primary submit-review form-group">
      Submit
    </button>
  </form>
</div>

<script type="text/javascript">
  $('#review-rating').rating();
</script>
