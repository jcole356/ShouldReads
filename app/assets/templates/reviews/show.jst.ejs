<div class="reviews-header clear">
  <h3 class="reviews-header-text">Reviews:</h3>
</div>

{{ reviews.each(function(review) { }}
  {{ if(review.escape('book_id') === book.id.toString()) { }}
    <div class="review-content">
      <div class="review-title-header">
        <h4 class="review-title">{{= review.escape('title') }}</h4>
        <h4 class="review-rating">
          Rating: {{= review.escape('rating') }} of 5
        </h4>
        {{ if (review.escape('author_id') === CURRENT_USER_ID) { }}
          <button
            class="btn btn-danger btn-sm delete-review"
            type="button"
            name="button"
            data-id="{{= review.id }}"
          >
            Delete
          </button>
          <button
            class="btn btn-primary btn-sm edit-review"
            type="button"
            name="button"
            data-id="{{= review.id }}"
          >
            Edit
          </button>
        {{ } }}
      </div>
      <blockquote class="blockquote">
        <p>{{= review.escape('body') }}</p>
        <footer class="blockquote-footer">
          <cite title="Source Title">
            {{= review.escape('username') }}
          </cite>
        </footer>
      </blockquote>
    </div>
  {{ } }}
{{ }) }}
