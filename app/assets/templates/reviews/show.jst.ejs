<div class="row">
  <div class="reviews-header col-12">
    <h3>Reviews:</h3>
  </div>
</div>
{{ reviews.each(function(review) { }}
  {{ if(review.escape('book_id') === book.id.toString()) { }}
    <div class="review-content row">
      <h4
        class="review-title {{= review.escape('author_id') === CURRENT_USER_ID ? 'col-6' : 'col-12' }} order-1 col-md-6"
      >
        {{= review.escape('title') }}
      </h4>
      <div class="col-6 order-3 col-md-3 order-md-2">
        <div
          class="rateYo"
          data-rating="{{= review.escape('rating') }}"
        />
      </div>
      {{ if (review.escape('author_id') === CURRENT_USER_ID) { }}
        <div class="col-6 order-2 col-md-3 order-md-3">
          <button
            class="btn btn-danger btn-sm delete-review"
            data-id="{{= review.id }}"
            name="button"
            type="button"
          >
            Delete
          </button>
          <button
            class="btn btn-primary btn-sm edit-review"
            data-id="{{= review.id }}"
            name="button"
            type="button"
          >
            Edit
          </button>
        </div>
      {{ } }}
      <blockquote class="blockquote col-12 order-4">
        <p class="col-12">{{= review.escape('body') }}</p>
        <footer class="blockquote-footer">
          <cite title="Source Title">
            {{= review.escape('username') }}
          </cite>
        </footer>
      </blockquote>
    </div>
  {{ } }}
{{ }) }}
