<div class="reviews-header col-12">
  <h3>Reviews:</h3>
</div>

{{ reviews.each(function(review) { }}
  {{ if(review.escape('book_id') === book.id.toString()) { }}
    <div class="review-content col-12">
      <div class="review-title-header row">
        <h4 class="review-title col-6">{{= review.escape('title') }}</h4>
        <h4 class="review-rating col-6">
          Rating: {{= review.escape('rating') }} of 5
        </h4>
        {{ if (review.escape('author_id') === CURRENT_USER_ID) { }}
          <button
            class="btn btn-danger btn-sm delete-review"
            type="button"
            name="button"
            data-id="{{= review.id }}"
          >
            Delete
          </button>
          <button
            class="btn btn-primary btn-sm edit-review"
            type="button"
            name="button"
            data-id="{{= review.id }}"
          >
            Edit
          </button>
        {{ } }}
      </div>
      <blockquote class="blockquote row">
        <p class="col-12">{{= review.escape('body') }}</p>
        <footer class="blockquote-footer col-12">
          <cite title="Source Title">
            {{= review.escape('username') }}
          </cite>
        </footer>
      </blockquote>
    </div>
  {{ } }}
{{ }) }}
