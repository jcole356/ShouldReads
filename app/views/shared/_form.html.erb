<% action_url = (action == :session_new) ? session_url : users_url %>
<% button_text = (action == :session_new) ? "Log In" : "Sign Up" %>

<div class="row">
  <div class="">
    <h1 class="sign-in-title">Should Reads</h1>
  </div>
</div>

<form class="form-horizontal" action="<%= action_url %>" method="post">
  <%= auth_token_input %>
  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-1">
      <input
        type="text"
        class="form-control"
        id="inputEmail3"
        placeholder="Username"
        name="user[username]">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-1">
      <input
        type="password"
        class="form-control"
        id="inputPassword3"
        placeholder="Password"
        name="user[password]">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-1">
      <button
        type="submit"
        class="btn btn-primary btn-md btn-block"><%= button_text %>
      </button>
    </div>
  </div>
</form>
