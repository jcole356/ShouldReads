<% action_url = (action == :session_new) ? session_url : users_url %>
<% button_text = (action == :session_new) ? "Log In" : "Sign Up" %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="sign-in-title">Should Reads</h1>
  </div>
</div>

<form class="form-horizontal" action="<%= action_url %>" method="post">
  <div class="row">
    <%= auth_token_input %>
    <div class="form-group">
      <div class="col-md-6 col-md-offset-3">
        <input
          type="text"
          class="form-control"
          id="inputEmail3"
          placeholder="Username"
          name="user[username]">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-group">
      <div class="col-md-6 col-md-offset-3">
        <input
          type="password"
          class="form-control"
          id="inputPassword3"
          placeholder="Password"
          name="user[password]">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-group">
      <div class="col-md-6 col-md-offset-3">
        <button
          type="submit"
          class="btn btn-primary btn-md btn-block"><%= button_text %>
        </button>
      </div>
    </div>
  </div>
</form>
